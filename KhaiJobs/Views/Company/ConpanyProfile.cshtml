        <td align="left" width="60%">
            <input type="text" ID="txtProfile" Runat="server" Width="100%" Rows="5" TextMode="MultiLine"></input type="text">
        </td>
    </tr>
    <tr>
        <td valign="top" align="left" colspan="2" class="dataentryformlabelbig">
            <span ID="Label15" Runat="server" Text="Месторасположение" SkinID="FormGroupLabel"></span>
