@model KhaiJobs.Entities.company
@{Layout = "~/Views/Shared/_Company.cshtml";}
<div class="container content-main">
    <div>
        <h2>Изменить профиль вашей компании</h2>
    </div>

    <form id="companyProfileForm" class="" action="/Company/CompanyProfile" method="post">
        <input type="hidden" value="@Model.id" name="id" />
        <div class="form-group">
            <label for="name">Имя компании</label>
            <input type="text" class="form-control" value="@Model.name" name="name" id="name" />
        </div>

        <div class="form-group">
            <label for="description">Краткий профиль</label>
            <input type="text" class="form-control" value="@Model.description" name="description" id="description" />
        </div>

        <div class="form-group">
            <label for="address">Адрес</label>
            <input type="text" class="form-control" value="@Model.address" name="address" id="address" />
        </div>

        <div class="form-group">
            <label for="city">Город</label>
            <input type="text" class="form-control" value="@Model.name" name="city" id="city" />
        </div>

        <div class="form-group">
            <label for="country">Страна</label>
            <input type="text" class="form-control" value="@Model.country" name="country" id="country" />
        </div>

        <div class="form-group">
            <label for="phone">Телефон</label>
            <input type="text" class="form-control" value="@Model.phone" name="phone" id="phone" />
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" class="form-control" value="@Model.email" name="email" id="email" />
        </div>
        <div class="form-group">
            <label for="website_url">Web-сайт</label>
            <input type="text" class="form-control" value="@Model.website_url" name="website_url" id="website_url" />
        </div>
        <button class="btn-primary btn" onclick="$('#companyProfileForm').submit();">Сохранить</button>
        <button class="btn-default btn" onclick="window.location.href='/Company/CompanyProfile'">Отменить</button>
    </form>


</div>