@model KhaiJobs.ViewModels.VacanciesViewModel
@{Layout = "~/Views/Shared/_Company.cshtml";}
@{
    ViewBag.Title = "Просмотр моих вакансий";
}
<title>@ViewBag.Title</title>
<div class="container content-main">
    <div class="row">
        <div class="col-lg-12 ">

            <h3 class="alljobs">Просмотр моих вакансий</h3>

            <table width="100%" class="table-striped">
                <tr>
                    <th>Название</th>
                    <th>Месторасположение</th>
                    <th>Размещено</th>
                    <th></th>

                </tr>
                @foreach (var vacancy in Model.Vacancies)
                {
                    <tr>
                        <td>@vacancy.name</td>
                        <td>@(vacancy.company?.city)</td>
                        <td>Да</td>
                        <td><a href="/Company/AddEditPosting?id=@vacancy.id">Изменить</a></td>

                    </tr>
                }
            </table>

        </div>
        <button class="btn btn-primary" onclick="window.location.href = '/Company/AddEditPosting'">Добавить</button>
    </div>
</div>

<link href="~/Content/bootstrap.min.css" rel="stylesheet" media="screen">
<link href="~/Content/jobs.css" rel="stylesheet" />