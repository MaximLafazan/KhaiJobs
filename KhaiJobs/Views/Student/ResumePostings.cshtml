@model KhaiJobs.ViewModels.ViewResumesViewModel
@{Layout = "~/Views/Shared/_Student.cshtml";}
@{
    ViewBag.Title = "Просмотр моих резюме";
}
<title>@ViewBag.Title</title>
<div class="container content-main">
    <div class="row">
        <div class="col-lg-12 ">

            <h3 class="alljobs">Просмотр моих резюме</h3>

            <table width="100%" class="table-striped">
                <tr>
                    <th>Название</th>
                    <th>Код резюме</th>
                    <th>Месторасположение</th>
                    <th>Размещено</th>
                    <th></th>

                </tr>
                @foreach (var resume in Model.Resumes)
                {
                <tr>
                    <td>@resume.name</td>
                    <td>@resume.city</td>
                    <td>Да</td>
                    <td><a href="/Student/AddOrEditResume?id=@resume.id">Изменить</a></td>

                </tr>
                }
            </table>

        </div>
    </div>
    <button class="btn btn-primary" onclick="window.location.href = '/Student/AddOrEditResume'">Добавить</button>
</div>

<link href="~/Content/bootstrap.min.css" rel="stylesheet" media="screen">
<link href="~/Content/jobs.css" rel="stylesheet" />