@model KhaiJobs.ViewModels.AddProfessionalCompetenceViewModel
@{Layout = "~/Views/Shared/_Student.cshtml";}

@{
    ViewBag.Title = "Добавить компетенцию";
}
<title>@ViewBag.Title</title>
<div class="container content-main">
    <div class="row">


        <div id="studentAddCompetence" >
            <div class="col-lg-12">
                <h2>Добавление компетенции</h2>
                <div class="form-group">
                    <input type="text" class="form-control input-gr-add" value="@Model.Name" id="competenceName" placeholder="Имя компетенции" />
                </div>

                <div class="form-group margin-left-part">

                    <div class="input-group input-gr-add">
                        <input type="text" id="skill" class="form-control input-gr-add" placeholder="Навык" />
                        <ul class="dropdown-menu" id="drop-skill" style="top:31px; left:0px;"></ul>
                        <span class="input-group-btn">
                            <button class="btn btn-success" id="btn-skill-add">Добавить навык</button>
                        </span>
                    </div>
                    <table id="table-skill">

                    </table>
                </div>
                <div class="form-group margin-left-part">
                    <div class="input-group-btn">
                        <select class="form-control input-gr-add" style="display:inline-block"></select>
                    </div>
                </div>

                <div class="form-group margin-left-part">
                    <div class="input-group input-gr-add">
                        <input type="text" class="form-control input-gr-add" id="knowledge" placeholder="Знание" />
                        <ul class="dropdown-menu" id="drop-knowledge" style="top:31px; left:0px;"></ul>
                        <span class="input-group-btn">
                            <button class="btn btn-success" id="btn-know-add">Добавить знание</button>
                        </span>
                    </div>
                </div>
                <div class="form-group margin-left-part">
                    <div class="input-group-btn">
                        <select class="form-control input-gr-add" style="display:inline-block"></select>
                    </div>
                    <table id="table-know">

                    </table>
                </div>

                <div class="form-group margin-left-part">
                    <div class="input-group input-gr-add">
                        <input type="text" id="ability" class="form-control input-gr-add" placeholder="Умение" />
                        <ul class="dropdown-menu" id="drop-ability" style="top:31px; left:0px;"></ul>
                        <span class="input-group-btn">
                            <button class="btn btn-success" id="btn-ability-add">Добавить умение</button>
                        </span>
                    </div>
                    <table id="table-ability">

                    </table>
                </div>

                <div>
                    <button class="btn btn-primary" onclick="saveCompetence()">Сохранить</button>
                </div>
            </div>
  
        </div>
        
    </div>
    <input type="text" class="hidden" value="@ViewBag.Id" id="profileId" />
</div>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" media="screen">
<link href="~/Content/jquery.raty.css" rel="stylesheet" />
<link href="~/Content/competition.css" rel="stylesheet" />
<script src="~/Scripts/Student/AddCompetenceScript.js"></script>

<style>
    .margin-left-part{
        margin-left:20px;
    }
</style>