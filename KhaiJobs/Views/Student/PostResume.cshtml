<contenttemplate>
    <table width="100%" cellpadding="3">
        <tr>
            <td align="left" colspan="2" class="dataentryformlabelbig">
                <span ID="Label15" Runat="server" SkinID="FormGroupLabel"
                           Text="Работа/должность"></span>
            </td>
        </tr>
        <tr>
            <td align="right" nowrap width="10%">
                <span ID="Label1" Runat="server" Text="Наименование :"></span>
            </td>
            <td align="left">
                <input type="text" ID="txtJobTitle" Runat="server"></input>
            </td>
        </tr>
        <tr>
            <td align="right" nowrap width="10%">
                <span ID="Label6" Runat="server" Text="Желаемый тип работы :"></span>
            </td>
            <td align="left">
                <select ID="ddlJobType" Runat="server"></select>
            </td>
        </tr>
        <tr>
            <td align="left" colspan="2" class="dataentryformlabelbig">
                <span ID="Label16" Runat="server" SkinID="FormGroupLabel" Text="Месторасположение"></span>
            </td>
        </tr>
        <tr>
            <td align="right" nowrap width="10%">
                <span ID="Label2" Runat="server" Text="Город :"></span>
            </td>
            <td align="left">
                <input type="text" ID="txtCity" Runat="server"></input>
            </td>
        </tr>
        <tr>
            <td align="right" nowrap width="10%">
                <span ID="Label3" Runat="server" Text="Страна :"></span>
            </td>
            <td align="left">
                <select ID="ddlCountry" Runat="server" AutoPostBack="True"
                        OnSelectedIndexChanged="ddlCountry_SelectedIndexChanged"></select>
            </td>
        </tr>
        <tr>
            <td align="right" nowrap width="10%">
                <span ID="Label4" Runat="server" Text="Район :"></span>
            </td>
            <td align="left">
                <select ID="ddlState" Runat="server"></select>
            </td>
        </tr>
        <tr>
            <td align="right" nowrap width="10%">
                <span ID="Label5" Runat="server" Text="Приемлем переезд :"></span>
            </td>
            <td align="left">
                <select ID="ddlRelocationCountry" Runat="server"></select>
            </td>
        </tr>
        <tr>
            <td align="left" colspan="2" class="dataentryformlabelbig">
                <span ID="Label17" Runat="server" SkinID="FormGroupLabel"
                      Text="Образование и опыт"></span>
                &nbsp;&nbsp;
            </td>
        </tr>
        <tr>
            <td align="right" nowrap width="10%">
                <span ID="Label7" Runat="server" Text="Образование :"></span>
            </td>
            <td align="left">
                <select ID="ddlEduLevel" Runat="server"></select>
            </td>
        </tr>
        <tr>
            <td align="right" nowrap width="10%">
                <span ID="Label8" Runat="server" Text="Опыт :"></span>
            </td>
            <td align="left">
                <select ID="ddlExpLevel" Runat="server"></select>
            </td>
        </tr>
        <tr>
            <td align="left" colspan="2" class="dataentryformlabelbig">
                <span ID="Label9" Runat="server" SkinID="FormGroupLabel" Text="Описание (резюме) :"></span>
            </td>
        </tr>
        <tr>
            <td align="right" colspan="2" valign="top">
                &nbsp;<input type="text" ID="txtResume" Runat="server" Rows="15" TextMode="MultiLine"
                             Width="98%">
                <br />
            </td>
        </tr>
        <tr>
            <td align="left" colspan="2" valign="top" class="dataentryformlabelbig">
                <span ID="Label10" Runat="server" SkinID="FormGroupLabel"
                      Text="Шаблон письма :"></span>
            </td>
        </tr>
        <tr>
            <td align="right" colspan="2" valign="top">
                &nbsp;<input type="text" ID="txtCoveringLetter" Runat="server" Rows="15"
                             TextMode="MultiLine" Width="98%">
            </td>
        </tr>
        <tr>
            <td align="center" colspan="2" width="10%">
                <input type="image" ID="ImageButton1" runat="server"
                       ImageUrl="~/Images/SaveButton.gif" onclick="ImageButton1_Click" />
                &nbsp;<input type="image" ID="ImageButton2" runat="server"
                             ImageUrl="~/Images/CancelButton.gif" onclick="ImageButton2_Click" />
                &nbsp;
            </td>
        </tr>
        <tr>
            <td align="center" colspan="2" width="10%">
                <span ID="lblMsg" runat="server" SkinID="FormLabel"></span>
            </td>
        </tr>
        <tr>
            <td align="center" colspan="2" width="10%"></td>
        </tr>
    </table>
</contenttemplate>
