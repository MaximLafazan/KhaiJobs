@{Layout = "~/Views/Shared/_Student.cshtml";}
@{
    ViewBag.Title = "Добавить резюме";
}
<title>@ViewBag.Title</title>
<div class="container content-main">
    <div class="row">
        <form id="studentProfileForm" action="/Student/AddOrEditResume" method="post">
            <div class="col-lg-12 ">
                <h2>Добавление/редактирование резюме</h2>
                <div class="alert alert-info">Работа/должность</div>
                <div class="form-group">
                    <label class="control-label" for="name">Наименование</label>
                    <input class="form-control" id="name" type="text" placeholder="Название вакансии" />
                </div>

                <div class="form-group">
                    <label class=" control-label" for="typejob">Желаемый тип работы</label>
                    <select class="form-control max-size-in" id="typejob" placeholder="Тип работы">
                        <option>Полная занятость</option>
                        <option>Неполная занятость</option>
                        <option>Стажировка/практика</option>
                        <option>Удаленная работа</option>
                        <option>Проектная работа</option>
                    </select>
                </div>
                <br />
                <div class="alert alert-info">Месторасположение</div>

                <div class="form-group">
                    <label class=" control-label" for="city">Город</label>
                    <select class="form-control max-size-in" id="city" name="city">
                        <option>Киев</option>
                        <option>Харьков</option>
                        <option>Львов</option>
                        <option>Одесса</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class=" control-label" for="relocate">Возможность переезда</label>
                    <select class="form-control max-size-in" id="relocate" name="relocate">
                        <option>Да</option>
                        <option>Нет</option>

                    </select>
                </div>
                <br />
                <div class="alert alert-info">Образование и опыт</div>
                <div class="form-group">
                    <label class=" control-label" for="levelEducation">Уровень образования</label>
                    <select class="form-control max-size-in" id="levelEducation" name="levelEducation">

                        <option>Неполное высшее</option>
                        <option>Полное высшее</option>

                    </select>
                </div>
                <div class="form-group">
                    <label class=" control-label" for="levelExp">Опыт</label>
                    <select class="form-control max-size-in" id="levelExp" name="levelExp">

                        <option>Без опыта</option>
                        <option>Менее пол года</option>
                        <option>Пол года - 1 год </option>
                        <option>Более 1 года</option>
                        <option>Более 2 года</option>
                        <option>Более 3 года</option>
                        <option>Более 4 года</option>
                        <option>Более 5 года</option>

                    </select>
                </div>
                <br />
                <div class="alert alert-info">Дополнительная информация</div>
                <div class="form-group">
                    <textarea class="form-control" rows="7" name="textResume"></textarea>
                </div>
                <div class="alert alert-info">Компетенции</div>
                <button class="btn btn-primary" onclick="event.preventDefault(); location.href = 'AddCompetence';">Добавить компетенцию</button>

                <div>
                    <button class="btn btn-primary" onclick="$('#studentProfileForm').submit()">Сохранить</button>
                </div>
            </div>
        </form>
    <!--<div id="time"></div>-->
</div>
    </div>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" media="screen">
<link href="~/Content/jquery.raty.css" rel="stylesheet" />
<link href="~/Content/competition.css" rel="stylesheet" />

